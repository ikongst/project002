/*** GENERAL DEFINITION ***/
LIN_node_config_file;

/*** MCU DEFINITION ***/
mcu {
   mcu_name                      = MC9S12ZVML128;
   bus_clock                     = 50000000;                 /* Frequency bus of system Hz*/
   xgate_support                 = no;                       /* Support XGATE Co-Processor */
}

/*** LIN HARDWARE DEFINITION ***/
/* Sci config */
sci {
   s12_sci0{
      sci_channel                = 0;
   }
}

/*** NETWORK DEFINITION ***/
network {
   idle_timeout                  = 5 s;
   diagnostic_class              = 3;
   resynchronization_support     = no;
   autobaud_support              = no;
   max_message_length            = 6;
   LIN_NXP {
      node                       = Motor;                    /* Name of node described in LDF (must check consistence with LDF) */
      file                       = "LIN_Platform_2_0.ldf";   /* Name of LDF file */
      device                     = s12_sci0;
      support_sid {
         READ_BY_IDENTIFIER      = 0xb2;
         SAVE_CONFIGURATION      = 0xb6;
         ASSIGN_FRAME_ID_RANGE   = 0xb7;
         ASSIGN_FRAME_IDENTIFIER = 0xb1;
         READ_DATA_BY_IDENTIFIER = 0x22;
         SESSION_CONTROL         = 0x10;
         IO_CONTROL_BY_IDENTIFIER = 0x2f;
         FAULT_MEMORY_READ       = 0x19;
         FAULT_MEMORY_CLEAR      = 0x14;
      }
   }
}

